$('#issue_notes').val(`<%= @response.note.html_safe %>`)
//if the option (Setting.plugin_redmine_wysiwyg_editor[:visual_editor_mode_switch_tab]) is enabled
if (($('.wysiwyg-editor-tab').length)) {
  $('.wysiwyg-editor-tab a[data-type="text"]').click();
} else {
  $(".tab-rwe-text").click();
}

<% if @response.final_status_id.present? %>
  $('#issue_status_id').val(`<%= @response.final_status_id %>`)
  $('#issue_assigned_to_id').val(`<%= @response.assigned_to_id %>`)
<% end %>
